<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment_forgot_account"
    android:background="#101116">

    <ImageView
        android:id="@+id/ico1"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="17dp"
        android:src="@drawable/back_arro"/>


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="287dp"
        android:layout_height="311dp"
        android:layout_below="@id/ico1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="52dp"
        android:src="@drawable/forget_password" />




    <TextView
        android:id="@+id/text"
        android:layout_width="316dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="379dp"
        android:layout_marginEnd="22dp"
        android:text="Forgot Password"
        android:textColor="@color/white"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="22dp"
        android:text="Enter your email associated with your account and weâ€™ll send confirmation to reset your password"
        android:textColor="@color/white"
        android:textSize="14sp" />



    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="270dp"
        android:text=" Email"
        android:textColor="#B6B4B4"
        android:textSize="15dp" />



    <EditText
        android:id="@+id/etemail"
        android:layout_below="@id/text2"
        android:layout_width="360dp"
        android:layout_height="46dp"
        android:paddingStart="15dp"
        android:hint="mail@abc.com"
        android:textColorHint="#454444"
        android:layout_marginStart="17dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="17dp"
        android:textColor="@color/white"
        android:background="@drawable/costument2"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirm_password"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/etemail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#20D0C2"
        android:text="Continue"
        app:cornerRadius="7dp" />

</RelativeLayout>